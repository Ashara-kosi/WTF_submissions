print(s.lower().upper())
#QUESTION 15
s= "Topkapi"
s.rjust(20,".")
s.ljust(15)
print(s.ljust(15))
print(s.ljust(15,"."))

print(s.rjust(15))
print(s.rjust(20,"."))

print(s.rjust(6))


